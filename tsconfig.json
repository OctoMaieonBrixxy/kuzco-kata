{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitUseStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "app",
    "src",
    "scripts",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "configuration",
    "tests"
  ],
  "compileOnSave": false
}
